extends layouts/mainLayout.pug

block content 
    .clearfix
        main.maincontent(style='margin-top: 131px;')
            section.loginsec
                .container
                    .row.justify-content-center
                        .col-12.col-md-7
                            h2.card-title.mb-4 Register
                            .card.card-signin
                                .card-body
                                    form.form-signin.row
                                        .form-group.mb-4.col-lg-12
                                            label Username
                                            input.form-control(type='text')
                                        .form-group.mb-4.col-lg-12
                                    label Email
                                    input.form-control(type='email')
                                .form-group.mb-4.col-lg-12
                                    label Password
                                    input.form-control(type='password')
                                .form-group.mb-4.col-lg-12
                                    label Confirm Password
                                    input.form-control(type='password')
                                .form-group.col-lg-12.mb-4
                                    label.check-container
                                        | I agree to the
                                        a.text-primary(href='/terms') Terms &amp; condition
                                        input(type='checkbox')
                                        span.checkmark
                                .form-group.col-lg-12.mb-4
                                    button.btn.btn-lg.btnprimary.rounded-50.btn-block.text-uppercase.text-white(type='submit') Create an Account
                            .text-center.text-dark.mb-3
                                | Already have an account yet? 
                                a.text-primary(href='/login')
                                    u Sign in
